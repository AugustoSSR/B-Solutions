@using B_Solutions.Enums
@model UsuariosModel;
@{
    ViewData["Title"] = "Editar usuario";
}

<div class="text-center">

    <img class="mb-4" src="~/img/brand/blue.png" alt="" width="360" height="114">
    <h3>Formulario de edição de usuario</h3>
    <p></p>
    <br />
    <br />
    <br />
    <br />
</div>

<form asp-controller="Usuarios" asp-action="Editar" method="post">

    <div class="row g-5">

        <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-secondary">Informações</span>
                <span class="badge bg-secondary rounded-pill">ID: @Model.Id</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">Data de cadastro</h6>
                        <small class="text-muted">B Solutions</small>
                    </div>
                    <span class="text-muted">@Model.dataCadastro</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">Data de alteração</h6>
                        <small class="text-muted">B Solutions</small>
                    </div>
                    <span class="text-muted">@Model.dataAlteracao</span>
                </li>
            </ul>
        </div>
        <div class="col-md-7 col-lg-8">
            <div class="row">
                <div class="col-sm-5">
                    <labal class="form-label">Nome completo</labal>
                    <input type="text" asp-for="Nome" class="form-control">
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>
                <div class="col-sm-5">
                    <labal class="form-label">E-mail</labal>
                    <input type="text" asp-for="Email" class="form-control">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="col-sm-3">
                    <labal class="form-label">Nome do usuario</labal>
                    <input type="text" asp-for="Login" class="form-control">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="col-sm-3">
                    <labal class="form-label">Telefone</labal>
                    <input type="text" asp-for="Telefone" class="form-control">
                    @Html.ValidationMessageFor(x => x.Telefone)
                </div>
                <div class="col-sm-5">
                    <labal class="form-label">Cargo</labal>
                    <div class="col-sm-6">
                        <select class="form-select" asp-for="Perfil">
                            <option value="">Selecione</option>
                            <option value="@PerfilEnum.ADMINISTRADOR">Administrador</option>
                            <option value="@PerfilEnum.PROJETISTA">Projetista</option>
                            <option value="@PerfilEnum.CLIENTE">Cliente</option>
                        </select>
                        @Html.ValidationMessageFor(x => x.Perfil)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <a class="btn btn-danger" asp-controller="Usuarios" asp-action="Index" role="button"><i class="bi bi-back"></i> &nbsp;Voltar</a>
    <button type="submit" class="btn btn-block btn-success"><i class="bi bi-check-lg"></i> &nbsp;Atualizar</button>
    <div class="d-grid gap-1">
    </div>
</form>
