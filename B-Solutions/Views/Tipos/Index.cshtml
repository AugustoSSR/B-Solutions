@model List<TiposModel>
@{
    ViewData["Title"] = "Lista de usuarios";
}
<div class="text-center">
    <br />
    <h1>Lista de usuarios</h1>
    <p>Lista completa com todos os usuarios.</p>
    <br />
    <button type="button" class="btn btn-success text-md-start" data-bs-toggle="modal" data-bs-target="#exampleModal">
        <i class="bi bi-pencil-square"></i> &nbsp;Adicionar
    </button>


    <table class="table" id="tiposTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Ativado<th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var tipos in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => tipos.Id)</th>
                        <td>@Html.DisplayFor(modelItem => tipos.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => tipos.IsActive)</td>
                        <td>@Html.DisplayFor(modelItem => tipos.dataCadastro)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-light btnEditar" data-value="@tipos.Id"><i class="bi bi-gear"></i> &nbsp;Editar</a>
                                <a role="button" class="btn btn-warning btnDeletar" data-value="@tipos.Id"><i class="bi bi-trash3"></i> &nbsp;Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center"><td valign="top" colspan="6">Nenhum contato encontrado</td></tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("Editar.cshtml")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>