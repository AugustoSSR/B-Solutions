@model List<TipoProjetoModel>
@{
    ViewData["Title"] = "Lista de tipos";
}

<div class="text-center">
    <br />
    <h1>Lista de tipos de projetos</h1>
    <p>Lista completa com todos os usuarios.</p>
    <br />
    <br />
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-success" role="button" asp-controller="Tipos" asp-action="Adicionar"><i class="bi bi-plus-circle"></i> &nbsp;Adicionar</a>
</div>
<br />
<div class="text-center">
    <table class="table" id="tiposTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Ativado</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (TipoProjetoModel tipos in Model)
                {
                    <tr>
                        <th scope="row">@tipos.Id</th>
                        <td>@tipos.Nome</td>
                        
                        <td>@tipos.dataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-light" asp-route-id="@tipos.Id" asp-action="Editar" asp-controller="Tipos"><i class="bi bi-gear"></i> &nbsp;Editar</a>
                                <a role="button" class="btn btn-warning" asp-route-id="@tipos.Id" asp-action="ApagarConfirmacao" asp-controller="Tipos"><i class="bi bi-trash3"></i> &nbsp;Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center"><td valign="top" colspan="6">Nenhum contato encontrado</td></tr>
            }
        </tbody>
    </table>
</div>