@model List<ArquivosModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Lista de empresas";
}




<div class="text-center">

    <br />
    <h1>Lista de empresas</h1>
    <p>Todas as empresas cadastradas no sistema.</p>
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-success" role="button" asp-controller="Arquivos" asp-action="Adicionar"><i class="bi bi-pencil-square"></i> &nbsp;Adicionar</a>
    </div>
    <br />
    <table class="table table-striped table-hover" id="arquivosTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Empresa</th>
                <th scope="col">Localidade</th>
                <th scope="col">N° Caderno</th>
                <th scope="col">Data de cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ArquivosModel arquivo in Model)
                {
                    <tr>
                        <th scope="row">@arquivo.Id</th>
                        <td>@arquivo.Nome</td>
                        <td>@arquivo.Empresa</td>
                        <td>@arquivo.Localidade</td>
                        <td>@arquivo.numeroCaderno</td>
                        <td>@arquivo.dataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-light" asp-route-id="@arquivo.Id" asp-controller="Arquivos" asp-action="Editar"><i class="bi bi-gear"></i> &nbsp;Editar</a>
                                <a role="button" class="btn btn-warning" asp-route-id="@arquivo.Id" asp-controller="Arquivos" asp-action="ApagarConfirmacao"><i class="bi bi-trash3"></i> &nbsp;Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center"><td valign="top" colspan="6">Nenhum contato encontrado</td></tr>
            }
        </tbody>
    </table>
</div>
