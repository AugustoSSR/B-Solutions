@using B_Solutions.Enums
@model UsuariosModel;
@{
    ViewData["Title"] = "Adicionar usuario";
}

<div class="text-center">

    <h1>Formulario de cadastro de usuarios</h1>
    <p>Informe todos os dados dos campos obrigatorios para adicionar um usuario.</p>
    <br />
</div>

<form asp-controller="Usuarios" asp-action="Adicionar" method="post">

    <div class="row">
        <div class="col mb-3">
            <labal class="form-label">Nome de usuario</labal>
            <input type="text" asp-for="Login" class="form-control" placeholder="Login" aria-label="Login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="col mb-3">
            <labal class="form-label">Senha</labal>
            <input type="password" asp-for="Senha" class="form-control" placeholder="Password" aria-label="Password">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
        <div class="col mb-3 col-lg-2">
            <labal class="form-label">Cargo</labal>
            <select class="form-select" asp-for="Perfil">
                <option value="">Selecione</option>
                <option value="@PerfilEnum.ADMINISTRADOR">Administrador</option>
                <option value="@PerfilEnum.PROJETISTA">Projetista</option>
                <option value="@PerfilEnum.CLIENTE">Cliente</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)
        </div>
        <div class="col mb-3">
            <labal class="form-label">Nome completo</labal>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Nome completo" aria-label="Nome completo">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="col mb-3 col-lg-3">
            <labal class="form-label">E-mail</labal>
            <input type="text" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="col mb-3">
            <labal class="form-label">Identificação</labal>
            <input type="text" asp-for="Telefone" class="form-control" placeholder="Telefone" aria-label="Telefone">
            @Html.ValidationMessageFor(x => x.Telefone)
        </div>
    </div>
    <br />
    <div class="d-grid gap-2">
        <a class="btn btn-danger" asp-controller="Usuarios" asp-action="Index" role="button">Voltar</a>
        <button type="submit" class="btn btn-block btn-success">Cadastrar</button>
    </div>
</form>
