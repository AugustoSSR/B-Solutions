@model EngenheirosModel
@{
    ViewData["Title"] = "Adicionar empresa";
}

<div class="text-center">

    <h1>Formulario de cadastro de empresas.</h1>
    <p>Preencha todos os campos obrigatorios para inserir uma empresa.</p>
    <br />
</div>

<form asp-controller="Engenheiros" asp-action="Adicionar" method="post" class="row g-3">

    <div class="row">
        <div class="col-md-6">
            <labal class="form-label">Nome completo</labal>
            <input type="text" asp-for="engenheiroNome" class="form-control">
            @Html.ValidationMessageFor(x => x.engenheiroNome)
        </div>
        <div class="col-md-6">
            <labal class="form-label">N° CPF</labal>
            <input type="text" data-mask="000.000.000-00" asp-for="engenheiroCPF" class="form-control" maxlength="14">
            @Html.ValidationMessageFor(x => x.engenheiroCPF)
        </div>
        <div class="col-md-6">
            <labal class="form-label">N° CREA</labal>
            <input type="text" asp-for="engenheiroCREA" class="form-control">
            @Html.ValidationMessageFor(x => x.engenheiroCREA)
        </div>
        <div class="col-md-6">
            <labal class="form-label">E-mail</labal>
            <input type="text" asp-for="engenheiroEmail" class="form-control">
            @Html.ValidationMessageFor(x => x.engenheiroEmail)
        </div>
    </div>
    <br />
    <div class="d-grid gap-2">
        <a class="btn btn-danger" asp-controller="Engenheiros" asp-action="Index" role="button">Voltar</a>
        <button type="submit" class="btn btn-block btn-success">Cadastrar</button>
    </div>
</form>
