@model List<ProjetoModel>

@{
    ViewData["Title"] = "Lista de Projetos";
}

<div class="text-center">

    <br />
    <h1>Lista de projetos</h1>
    <p>Lista completa com todos os projetos desde arquivados ou aprovados.</p>
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-success" role="button" asp-controller="Projetos" asp-action="Adicionar"><i class="bi bi-pencil-square"></i> &nbsp;Adicionar</a>
    </div>
    <br />
    <table class="table table-striped table-hover" id="projetosTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Status</th>
                <th scope="col">Empresa</th>
                <th scope="col">Cidade</th>
                <th scope="col">Protocolo EI</th>
                <th scope="col">ART</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ProjetoModel projeto in Model)
                {
                    <tr>
                        <th scope="row">@projeto.Id</th>
                        <td>@projeto.Nome</td>
                        <td>@projeto.Situacao</td>
                        <td>@projeto.Empresa</td>
                        <td>@projeto.Localidade</td>
                        <td>@projeto.Protocolo</td>
                        <td>@projeto.ART</td>
                        <td>@projeto.dataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-light" asp-route-id="@projeto.Id" asp-controller="Projetos" asp-action="Editar"><i class="bi bi-gear"></i> &nbsp;Editar</a>
                                <a role="button" class="btn btn-warning" asp-route-id="@projeto.Id" asp-controller="Projetos" asp-action="ApagarConfirmacao"><i class="bi bi-trash3"></i> &nbsp;Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center"><td valign="top" colspan="9">Nenhum dado encontrado, adicione no botão acima.</td></tr>
            }
        </tbody>
    </table>
</div>