@model ArquivosModel
@{
    ViewData["Title"] = "Adicionar empresa";
}

<div class="text-center">

    <h1>Formulario de cadastro de empresas.</h1>
    <p>Preencha todos os campos obrigatorios para inserir uma empresa.</p>
    <br />
</div>

<form asp-controller="Arquivos" asp-action="Adicionar" method="post" class="row g-3">

    <div class="row">
        <div class="col-md-6">
            <labal class="form-label">Nome do projeto</labal>
            <input type="text" asp-for="arquivoNome" class="form-control">
            @Html.ValidationMessageFor(x => x.arquivoNome)
        </div>
        <div class="col-md-6">
            <labal class="form-label">Nome empresa</labal>
            <input type="text" asp-for="arquivoEmpresa" class="form-control">
            @Html.ValidationMessageFor(x => x.arquivoEmpresa)
        </div>
        <div class="col-md-6">
            <labal class="form-label">Localidade</labal>
            <input type="text" asp-for="arquivoLocalidade" class="form-control">
            @Html.ValidationMessageFor(x => x.arquivoLocalidade)
        </div>
        <div class="col-md-6">
            <labal class="form-label">Numero caderno</labal>
            <input type="text" asp-for="arquivoCaderno" class="form-control">
            @Html.ValidationMessageFor(x => x.arquivoCaderno)
        </div>
    </div>
    <br />
    <div class="d-grid gap-2">
        <a class="btn btn-danger" asp-controller="Arquivos" asp-action="Index" role="button">Voltar</a>
        <button type="submit" class="btn btn-block btn-success">Cadastrar</button>
    </div>
</form>
